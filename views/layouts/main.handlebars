<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="/views/static/title.css" rel="stylesheet">
        <link href="/views/static/style.css" rel="stylesheet">
        <link href="/favicon.ico" rel="icon">

        <script>
            let menuBar = {}
            document.addEventListener("DOMContentLoaded", () => {
                menuBar = document.querySelector("#menuBar")
            })
            function openMenuBar() {
                    menuBar.style.width = "100%"
            }
            function closeMenuBar() {
                menuBar.style.width = "0%"
            }
        </script>

        <title>{{ title }}</title>
    </head>
    <body>
        <div id="header">
            <div id="header__image">
                <img src="../views/static/imgs/logo.png" alt="404 NOT FOUND" style="max-width: 85px; max-height: 75%;">
                <h2 class="title-text">CLIPABLE</h2>
            </div>

            <input type="text" class="input" placeholder="Search User" id="input"/>

            {{!-- <i class="material-icons own-menu-icon">&#xe5d2;</i> --}}
            <div id="header__login">
                {{#if authUser}}
                    <a class="btn button" href="#">{{ authUser.username }}</a>
                {{/if}}
                {{!-- {{#if authUser}}
                    <a class="btn button" href="/logout">LOGOUT</a>
                {{else}}
                    <a class="btn button" href="/login">LOGIN</a>
                    <a class="btn button" href="/signup">SIGN UP</a>
                {{/if}} --}}
                <div class="menu" onclick="openMenuBar()">
                    <div></div>
                    <div></div>
                    <div></div>
                </div>
            </div>
            <div id="menuBar" class="menu-bar">
                <a href="javascript:void(0)" class="closebtn" onclick="closeMenuBar()">&times;</a>
                <div class="menu-content">
                    <h2 class="title-text">CLIPABLE</h2>
                    {{#if authUser}}
                        <a href="#" class="title-text">{{authUser.username}}</a>
                        <a href="/logout">Logout</a>
                    {{else}}
                        <a href="/login">Login</a>
                        <a href="/signup">Sign Up</a>
                    {{/if}}
                </div>
            </div>
        </div>
        <div id="body">
            {{!-- <div id="upload"> --}}
                {{{ body }}}
            {{!-- </div> --}}
        </div>
    </body>
</html>
