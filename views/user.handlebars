<style>
    #video-container {
        display: flex;
        justify-content: center;
        flex-direction: column;
    }
    .videos-items {
        display: flex;
        flex-direction: row;
        align-self: center;
        text-decoration: none;
        width: 70%;
        min-width: 300px;
        max-width: 800px;
        padding: 0;
        margin: 10px;
    }
    .video {
        min-width: 175px;
        width: 50%;
    }
    #vide-desc {
        min-width: 125px;
    }
    #video-desc * {
        word-wrap: break-word;   
        overflow-wrap: break-word;
        word-break: break-word;
    }
</style>
<script>
    const video_description_MAX = 32

    document.addEventListener("DOMContentLoaded", () => {
        getAuthUser((err, authUser) => {
            if (err || !authUser)
                return

            var uploadsCount = document.querySelector("#totalUploads")
            uploadsCount.innerHTML = document.querySelectorAll(".info .videos-items").length + uploadsCount.innerHTML.slice(1)

            document.querySelectorAll(".video-description").forEach(videoDescription => {
                var content = videoDescription.innerHTML
                if (content.length>video_description_MAX)
                    content = content.slice(0,video_description_MAX) + "..."
                videoDescription.innerHTML = content
            })
        })
    })
</script>

<div class="background info">
    <div>
        <div class="info-main">
            <h2 class="text">{{ currentUser.username }}</h2>
            {{#if currentUser.isadmin }}
                <h5 class="title-text">ADMIN</h5>
            {{/if}}
        </div>
        <h6 class="text" id="totalUploads">0 total uploads</h6>
    </div>
</div>
<div class="background info" id="video-container">
    {{#each videos}}
        <a class="videos-items" href="/post/{{this.id}}">
            <video class="video">
                <source src="/videos/{{this.id}}.{{this.mimetype}}" type="video/mp4">
            </video>
            <div id="video-desc">
                <h3>{{this.title}}</h3>
                <h6 class="video-description">{{this.description}}</h6>
            </div>
        </a>
    {{/each}}
</div>
